<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site" method="upgrade">
	<name>icuetrainingclub</name>
	<creationDate></creationDate>
	<author>Icuenet</author>
	<authorEmail>info@icuenet.com</authorEmail>
	<authorUrl>www.icuenet.com</authorUrl>
	<copyright></copyright>
	<license> GNU GPL</license>
	<version>1.0</version>
	<description></description>

	<files>
		<filename>css/default.css</filename>
		<filename>css/default_rtl.css</filename>
		<filename>css/fonts/fonts.css</filename>
		<filename>css/fonts/index.html</filename>
		<filename>css/index.html</filename>
		<filename>css/mobile.css</filename>
		<filename>css/template.css</filename>
		<filename>css/template_rtl.css</filename>
		<filename>images/index.html</filename>
		<filename>images/logo.png</filename>
		<filename>images/system/index.html</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
	</files>
	<positions>
		<position>search</position>
		<position>top-menu</position>
		<position>slideshow</position>
		<position>top-module-1</position>
		<position>top-module-2</position>
		<position>top-module-3</position>
		<position>top-module-4</position>
		<position>left</position>
		<position>right</position>
		<position>middle-module-1</position>
		<position>middle-module-2</position>
		<position>middle-module-3</position>
		<position>middle-module-4</position>
		<position>footer-top</position>
		<position>footer-module-1</position>
		<position>footer-module-2</position>
		<position>footer-module-3</position>
		<position>footer-module-4</position>
		<position>bottom-menu</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logolink" type="text" default="" label="Logo link" description="If you want to redirect the page on the logo click" />
				<field name="logotitle" type="text" default="" label="Logo title" description="Choose the alt tag that will be added to the image" />
				<field name="logodescription" type="text" default="" label="Logo description" description="Text that will be added under the logo" />
				<field name="usecsspie" type="radio" default="1" label="Use CSS PIE" description="Launch a script to emulate the CSS3 styles for Internet Explorer" >
						<option value="1">yes</option>
						<option value="0">no</option>
				</field>
				<field name="useresponsive" type="radio" default="1" label="Use Responsive mode" description="Adapt your template design for mobile resolutions" >
						<option value="1">yes</option>
						<option value="0">no</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>